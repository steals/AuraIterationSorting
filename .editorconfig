# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Apex
[*.{cls,trigger}]
indent_style = space

# Visualforce
[*.{component,page}]
indent_style = space

# Aura
[*.{cmp,evt}]
indent_style = space

# CSS
[*.css]
indent_style = space
indent_size = 2